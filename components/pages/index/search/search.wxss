.search-box {
  width: 100%;
  box-sizing: border-box;
  padding: 4rpx 24rpx 0 24rpx;
}

.search-box .search-container {
  width: 100%;
  height: 68rpx;
  background: #FFFFFF;
  border-radius: 34rpx;
}

.search-box .hot-word {
  padding: 22rpx 0 36rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  line-height: 40rpx;
  display: flex;
  align-items: center;
}

.search-box .hot-word .hot-word-title {
  padding-right: 8rpx;
}

.search-box .hot-word .hot-word-tag {
  margin-right: 16rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, .18);
  padding: 0 12rpx;
  height: 40rpx;
}